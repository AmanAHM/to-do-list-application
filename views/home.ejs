    <link rel="stylesheet"  href="/css/home.css">
</head>
<body>

    <h1> <i class="fa-solid fa-list"></i> TO-DO LIST APP</h1>

    <form action="/post" method="POST">
    <div class="mb-3 lauda-lasson">
       
        <!-- <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Write your task here..."></textarea> -->
        <input class="form-control form-control-lg" type="text" placeholder="Write your task here..." aria-label=".form-control-lg example" row="3" name="task" id="display">
    </div>

      <div class="custom-add-reset-btn">
      <!-- <button type="submit" class="btn btn-primary btn-lg work-btn">Add Work</button>
`     <button type="reset" class="btn btn-secondary btn-lg reset btn">Reset</button> -->
        <!-- <button type="submit"> Add</button> -->
        <!-- <button type="reset">reset</button> -->
        <button type="submit" class="btn btn-primary mb-3 work-btn">Add Task</button>
        <button type="reset" class="btn btn-primary mb-3">Reset</button>
      </div>

    </form>
    
    <ul class=" to-dos">

     <%for(let i of work_list){%>
        <li class=  "task-list-item" id="edit-func"><%= i.task %>
        
        <a href="/delete-task/?task=<%= i.task %>" class="delete-icon"><i class="fa-solid fa-trash"></i></a>
        <!-- <i class="fa-solid fa-pen" id="pen-edit"></i> -->
        
        </li>
     <%}%>
    </ul>


    


<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
